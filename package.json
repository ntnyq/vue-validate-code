{
  "name": "vue-validate-code",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.3.0",
  "description": "Vue validate code",
  "keywords": [
    "validate",
    "validate-code",
    "vue",
    "vue-component",
    "vue-plugin"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com",
    "url": "https://ntnyq.com"
  },
  "homepage": "https://github.com/ntnyq/vue-validate-code",
  "repository": "ntnyq/vue-validate-code",
  "bugs": {
    "url": "https://github.com/ntnyq/vue-validate-code/issues"
  },
  "main": "./src/index.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.es.js",
        "require": "./dist/index.cjs.js",
        "types": "./dist/index.d.ts"
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/index.es.js",
    "module": "./dist/index.es.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "vite build",
    "coverage": "vitest --coverage",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint .",
    "prepare": "husky",
    "release": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.0.0-beta.3",
    "@ntnyq/prettier-config": "^2.0.0-beta.2",
    "@types/node": "^22.13.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "catalog:",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3",
    "vite": "catalog:",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "catalog:",
    "vue": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,tsx,vue,md,yml,yaml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
