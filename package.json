{
  "name": "vue-validate-code",
  "type": "module",
  "version": "0.0.10",
  "packageManager": "pnpm@10.10.0",
  "description": "Vue validate code",
  "keywords": [
    "validate",
    "validate-code",
    "vue",
    "vue-component",
    "vue-plugin"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com",
    "url": "https://ntnyq.com"
  },
  "homepage": "https://github.com/ntnyq/vue-validate-code",
  "repository": "ntnyq/vue-validate-code",
  "bugs": {
    "url": "https://github.com/ntnyq/vue-validate-code/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./volar": {
      "types": "./types/volar.d.ts"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "coverage": "vitest --coverage",
    "deploy": "run-s build docs:build",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint",
    "prepare": "husky",
    "release": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.2.0",
    "@ntnyq/prettier-config": "^2.0.0",
    "@ntnyq/utils": "^0.7.0",
    "@types/node": "^22.15.17",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "catalog:",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "catalog:",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "catalog:",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "catalog:"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,tsx,vue,md,yml,yaml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
