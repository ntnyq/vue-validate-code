{
  "name": "vue-validate-code",
  "version": "0.0.10",
  "description": "Vue validate code",
  "keywords": [
    "validate",
    "validate-code",
    "vue",
    "vue-component",
    "vue-plugin"
  ],
  "homepage": "https://github.com/ntnyq/vue-validate-code",
  "bugs": {
    "url": "https://github.com/ntnyq/vue-validate-code/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com",
    "url": "https://ntnyq.com"
  },
  "repository": "ntnyq/vue-validate-code",
  "files": [
    "dist",
    "types"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./volar": {
      "types": "./types/volar.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "deploy": "run-s build docs:build",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "prepare": "husky",
    "release": "run-s release:check release:version",
    "release:check": "run-p format:check lint typecheck test",
    "release:version": "bumpp",
    "test": "vitest",
    "test:browser": "vitest --ui --browser --config=vitest.browser.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/utils": "^0.11.0",
    "@types/node": "^25.3.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "unplugin-vue": "^7.1.1",
    "vite": "^8.0.0-beta.15",
    "vitest": "^4.0.18",
    "vitest-browser-vue": "^2.0.2",
    "vitest-canvas-mock": "^1.1.3",
    "vue": "^3.5.29",
    "vue-tsc": "^3.2.5"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,tsx,vue}": "oxlint --fix",
    "*": "oxfmt --no-error-on-unmatched-pattern"
  },
  "packageManager": "pnpm@10.30.2"
}
